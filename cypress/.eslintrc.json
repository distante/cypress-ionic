{
  "extends": ["../.eslintrc.json"],
  "plugins": ["cypress", "jest"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["**/*.ts", "*.js"],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      },
      "rules": {}
    },
    {
      "files": ["*.spec.ts"],
      "extends": ["plugin:cypress/recommended"],
      "rules": {
        "jest/no-focused-tests": 2, // this rule from jest is also valid for cypress spec files
        "jest/expect-expect": [
          "error",
          {
            "assertFunctionNames": [
              "expect",
              "m.expect",
              "http.verify",
              "**.should"
            ]
          }
        ]
      }
    },
    {
      "files": ["src/plugins/index.js"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "no-undef": "off"
      }
    }
  ]
}
